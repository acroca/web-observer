<%- model_class = Petition -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @petition.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:request_url) %>:</strong></dt>
  <dd><%= @petition.request_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:css_selector) %>:</strong></dt>
  <dd><%= @petition.css_selector %></dd>
  <dt><strong><%= model_class.human_attribute_name(:callback_url) %>:</strong></dt>
  <dd><%= @petition.callback_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_value) %>:</strong></dt>
  <dd><%= @petition.last_value.presence || "<i>empty</i>".html_safe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_check) %>:</strong></dt>
  <dd><%=l(@petition.last_check) if @petition.last_check %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_error) %>:</strong></dt>
  <dd><%= @petition.last_error.presence || "<i>empty</i>".html_safe %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              petitions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_petition_path(@petition), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              petition_path(@petition),
              :method => 'delete',
              :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
              :class => 'btn btn-danger' %>
</div>
