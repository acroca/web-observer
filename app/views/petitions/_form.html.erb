<%= simple_form_for @petition, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :request_url, :placeholder => 'http://www.example.com' %>
  <%= f.input :css_selector, :placeholder => '.list > span.number:first' %>
  <%= f.input :callback_url, :placeholder => 'http://www.example.com' %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  petitions_path, :class => 'btn btn-danger' %>
  </div>
<% end %>
